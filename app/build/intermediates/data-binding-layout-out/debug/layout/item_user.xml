<?xml version="1.0" encoding="utf-8"?>
        
    
                                                                                    
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:tag="layout/item_user_0">

        <ImageView
            android:tag="binding_1"                
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivProfileImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#dfd6d6"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER_NAME"                      
            tools:text="Ernest Semerda"
            android:textSize="12sp"
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"
            android:id="@+id/tvUserName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_toEndOf="@+id/ivProfileImage"  android:tag="binding_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCREEN_NAME"                                  
            tools:text="ATernestsemerda"
            android:textSize="11sp"
            android:textColor="@color/md_grey_600"
            android:id="@+id/tvScreenName"
            android:layout_alignBottom="@+id/tvUserName"
            android:layout_toRightOf="@+id/tvUserName"
            android:layout_toEndOf="@+id/tvUserName"
            android:layout_marginLeft="5dp"  android:tag="binding_3"/>

        <TextView
            android:tag="binding_4"          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOINED_X_MINS_AGO"
            tools:text="8 mins ago"
            android:textSize="10sp"
            android:textColor="@color/md_grey_600"
            android:id="@+id/tvTimeAgo"
            android:layout_alignRight="@+id/tvScreenName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="BODY_TEXT"                         
            android:tag="binding_5"         
            android:textSize="12sp"
            android:textColor="@color/md_black_1000"
            android:id="@+id/tvBody"
            android:maxLines="2"
            android:ellipsize="end"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_alignBottom="@+id/ivProfileImage"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_toEndOf="@+id/ivProfileImage"
            android:paddingTop="18dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/ivDivider"
            android:background="@color/md_grey_300"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
         