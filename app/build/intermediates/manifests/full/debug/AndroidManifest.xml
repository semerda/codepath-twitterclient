<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.purpleblue.apps.twitterclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="24"
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.purpleblue.apps.twitterclient.TwitterApplication"
        android:allowBackup="true"
        android:icon="@drawable/purpleblue_com"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Metadata for version and database name -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="RestClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <!-- Activities -->
        <activity
            android:name="com.purpleblue.apps.twitterclient.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cpsimpletwitterclient"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity android:name="com.purpleblue.apps.twitterclient.activities.TimelineActivity" />
        <activity android:name="com.purpleblue.apps.twitterclient.activities.ProfileActivity" />
        <activity android:name="com.purpleblue.apps.twitterclient.activities.SearchActivity" />
    </application>

</manifest>